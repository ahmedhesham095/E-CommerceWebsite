        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <!-- Missing login -->
        <error-code>401</error-code>
        <location>/general-error.jsp</location>
    </error-page>
    <error-page>
        <!-- Forbidden directory listing -->
        <error-code>403</error-code>
        <location>/general-error.jsp</location>
    </error-page>
    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/general-error.jsp</location>
    </error-page>
    <error-page>
        <!-- Unsupported servlet method -->
        <error-code>503</error-code>
        <location>/general-error.jsp</location>
    </error-page>
    
